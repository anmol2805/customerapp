<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.anmol.customerapp.MenuActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons">


    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@id/buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        app:cardElevation="48dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/transparent"

                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/homef" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:text="Home"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/home"
                android:layout_toLeftOf="@+id/orders"
                android:layout_toRightOf="@+id/home"
                android:layout_toStartOf="@+id/orders"
                android:id="@+id/rl1"

                >

                <ImageButton
                    android:id="@+id/ambulance"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:padding="10dp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/ambulancef" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Ambulance"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="#fff" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:background="#fff" />


            </RelativeLayout>

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/settingsf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="Settings"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/orders"
                android:layout_toLeftOf="@+id/settings"
                android:layout_toRightOf="@+id/orders"
                android:layout_toStartOf="@+id/settings"
                android:id="@+id/rl2"
                >

                <ImageButton
                    android:id="@+id/notifications"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/notifnw" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Notifications"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="#fff" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#fff" />


            </RelativeLayout>


            <ImageButton
                android:id="@+id/orders"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:padding="10dp"

                android:scaleType="fitCenter"
                android:src="@drawable/ordersnw" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Orders"

                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
